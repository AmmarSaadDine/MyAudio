<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/songs_list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/singer_image"
        android:layout_width="@dimen/list_item_image_dimen"
        android:layout_height="@dimen/list_item_image_dimen"
        tools:src="@drawable/ed_sheeran"
        android:scaleType="center"
        android:contentDescription="@string/ic_singer_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/songs_list_item_inner_padding">

        <TextView
            android:id="@+id/song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="song name sample"
            android:textSize="@dimen/song_item_name_text"/>

        <TextView
            android:id="@+id/singer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="singer name sample"
            android:textSize="@dimen/song_item_singer_text"/>

    </LinearLayout>
</LinearLayout>