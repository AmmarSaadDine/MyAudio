<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/songs_list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/singer_image"
        android:layout_width="@dimen/list_item_image_dimen"
        android:layout_height="@dimen/list_item_image_dimen"
        android:contentDescription="@string/ic_singer_image"
        android:scaleType="center"
        tools:src="@drawable/ed_sheeran" />

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/singer_list_item_inner_padding"
        android:gravity="center_vertical"
        android:textSize="@dimen/singer_item_name_text"
        tools:text="singer name sample" />

</LinearLayout>