<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LibraryButton">
        <item name="android:layout_width">@dimen/library_button_dimen</item>
        <item name="android:layout_height">@dimen/library_button_dimen</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:background">@drawable/library_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:elevation">@dimen/library_button_elevation</item>
    </style>

    <style name="PlayerMediaButton">
        <item name="android:layout_width">@dimen/player_media_button_dimen</item>
        <item name="android:layout_height">@dimen/player_media_button_dimen</item>
        <item name="android:tint">@color/player_media_button_background</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="PlayerOptionButton">
        <item name="android:layout_height">@dimen/player_option_button_dimen</item>
        <item name="android:tint">@color/player_option_button_background</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
